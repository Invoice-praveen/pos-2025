
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes to all documents.
    // This is a good security practice.
    match /{document=**} {
      allow read, write: if false;
    }

    // Products collection
    // Allow any authenticated user to read and write products.
    // You might want to refine this later based on user roles.
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }

    // Customers collection (example - needs a 'userId' field on customer documents)
    // Allow a user to read/write their own customer document.
    // match /customers/{customerId} {
    //   allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    // }

    // Sales collection (example)
    // Allow any authenticated user to read/write sales.
    // Refine based on your needs (e.g., only admins or specific users).
    // match /sales/{saleId} {
    //   allow read, write: if request.auth != null;
    // }

    // Services collection (example)
    // Allow any authenticated user to read/write services.
    // match /services/{serviceId} {
    //   allow read, write: if request.auth != null;
    // }
  }
}
